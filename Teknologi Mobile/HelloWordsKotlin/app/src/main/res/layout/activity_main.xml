<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:text="Nama: "
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/i_name"
            android:layout_toRightOf="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/gender"
            android:layout_below="@+id/name"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:text="Gender: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/man"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/gender"
            android:text="Pria"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/woman"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/man"
            android:text="Wanita"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/hoby"
            android:text="Hobi: "
            android:layout_below="@id/gender"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/coding"
            android:layout_below="@+id/gender"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/hoby"
            android:text="Coding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/reading"
            android:layout_below="@+id/coding"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="92dp"
            android:text="Reading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/traveling"
            android:layout_below="@+id/reading"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="92dp"
            android:text="Traveling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_add"
            android:layout_below="@+id/traveling"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/ic_baseline_add_24"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_close"
            android:layout_below="@+id/traveling"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="260dp"
            android:background="@drawable/ic_baseline_close_24"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>